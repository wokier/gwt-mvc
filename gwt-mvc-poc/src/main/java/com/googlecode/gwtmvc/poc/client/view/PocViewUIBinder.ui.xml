<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>

	<ui:style>
		.myStyle {
			background: lightsteelblue;
			font-weight:bold;
			padding: 3px;
		}
	</ui:style>

	<div>
		<h3>UI Binder</h3>
		With UIBinder you wrote HTML and apply
		<span class="{style.myStyle}">Style</span>
		<br />
		Model values is:
		<span ui:field='uiBinderSpan' />
		
	</div>
</ui:UiBinder>
